<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header dengan Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_header_bg"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RS Rawat Jalan"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan Kesehatan Terpercaya"
                android:textSize="16sp"
                android:textColor="#E8F4FD"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat datang! Pilih layanan yang Anda butuhkan"
                android:textSize="14sp"
                android:textColor="#E8F4FD" />

        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="-30dp">

            <!-- Quick Actions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Layanan Utama"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="16dp" />

                    <!-- Row 1: Poli Services -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPoliGigi"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp"
                                android:background="#E8F5E8">

                                <TextView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:text="ðŸ¦·"
                                    android:textSize="28sp"
                                    android:gravity="center"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="#4CAF50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Poli Gigi"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#2E7D32"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPoliMata"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp"
                                android:background="#E3F2FD">

                                <TextView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:text="ðŸ‘"
                                    android:textSize="28sp"
                                    android:gravity="center"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="#2196F3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Poli Mata"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1565C0"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Row 2: Other Services -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAntrianSaya"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp"
                                android:background="#FFF3E0">

                                <TextView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:text="ðŸ“‹"
                                    android:textSize="28sp"
                                    android:gravity="center"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="#FF9800" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Antrian Saya"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#E65100"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp"
                                android:background="#F3E5F5">

                                <TextView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:text="ðŸ“ž"
                                    android:textSize="28sp"
                                    android:gravity="center"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="#9C27B0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hubungi RS"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#6A1B9A"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>